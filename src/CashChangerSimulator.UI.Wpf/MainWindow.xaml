<Window x:Class="CashChangerSimulator.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CashChangerSimulator.UI.Wpf.ViewModels"
        xmlns:conv="clr-namespace:CashChangerSimulator.UI.Wpf.Converters"
        mc:Ignorable="d"
        Title="Cash Changer Simulator" Height="700" Width="1000"
        Background="#121212" Foreground="#E0E0E0"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <conv:CashStatusToBrushConverter x:Key="StatusBrushConv" />
        <conv:TransactionTypeToSymbolConverter x:Key="TypeSymbolConv" />
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.ColumnSpan="2" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <TextBlock Text="CASH CHANGER SIMULATOR" FontSize="12" Foreground="#888" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="¥" FontSize="24" VerticalAlignment="Bottom" Margin="0,0,5,5" Foreground="#BB86FC"/>
                        <TextBlock Text="{Binding TotalAmount.Value, StringFormat={}{0:N0}}" FontSize="48" FontWeight="Light"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="DEVICE STATUS" FontSize="11" Foreground="#888" HorizontalAlignment="Right"/>
                    <Border Background="{Binding OverallStatus.Value, Converter={StaticResource StatusBrushConv}}" 
                            CornerRadius="4" Padding="12,5" Margin="0,5,0,0">
                        <TextBlock Text="{Binding OverallStatus.Value}" Foreground="White" FontWeight="Bold" FontSize="16"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Inventory Grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Denominations}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" Width="150" Height="140">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Name}" Foreground="#888" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Count.Value}" FontSize="36" FontWeight="SemiBold" Margin="0,10" HorizontalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="+" Width="40" Command="{Binding AddCommand}" Background="#2C2C2C" BorderThickness="0" Foreground="White" Padding="5"/>
                                    <Separator Width="10" Visibility="Hidden"/>
                                    <Button Content="-" Width="40" Command="{Binding RemoveCommand}" Background="#2C2C2C" BorderThickness="0" Foreground="White" Padding="5"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Transaction History -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}" Margin="20,0,0,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="RECENT TRANSACTIONS" FontSize="12" Foreground="#888" FontWeight="Bold" Margin="0,0,0,15"/>
                
                <StackPanel DockPanel.Dock="Bottom" Margin="0,15,0,0">
                    <TextBlock Text="DISPENSE AMOUNT" Foreground="#888" FontSize="11"/>
                    <Grid Margin="0,5,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Row="0" x:Name="DispenseBox" Text="{Binding DispenseAmountInput, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" Background="#2C2C2C" Foreground="White" BorderThickness="0" Padding="8" VerticalContentAlignment="Center"/>
                        <Button Grid.Row="0" Grid.Column="1" Content="GO" Command="{Binding DispenseCommand}" Width="50" Margin="5,0,0,0" Background="#BB86FC" Foreground="Black" FontWeight="Bold" BorderThickness="0"/>
                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" 
                                   Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=DispenseBox}"
                                   Foreground="#CF6679" FontSize="10" Margin="0,2,0,0"
                                   Visibility="{Binding (Validation.HasError), ElementName=DispenseBox, Converter={StaticResource BoolToVis}}"/>
                    </Grid>
                </StackPanel>

                <ListBox ItemsSource="{Binding RecentTransactions}" Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Type, Converter={StaticResource TypeSymbolConv}}" FontSize="14"/>
                                <StackPanel Grid.Column="1" Margin="5,0">
                                    <TextBlock Text="{Binding Type}" FontSize="12" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}" FontSize="10" Foreground="#666"/>
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="{Binding Amount, StringFormat={}{0:N0}}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>
    </Grid>
</Window>
