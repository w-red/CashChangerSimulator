<Window x:Class="CashChangerSimulator.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CashChangerSimulator.UI.Wpf.ViewModels"
        xmlns:conv="clr-namespace:CashChangerSimulator.UI.Wpf.Converters"
        mc:Ignorable="d"
        Title="Cash Changer Simulator v1.1.0" Height="800" Width="1200"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource OnBackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <conv:CashStatusToBrushConverter x:Key="StatusBrushConv" />
        <conv:TransactionTypeToSymbolConverter x:Key="TypeSymbolConv" />
    </Window.Resources>

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="320" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.ColumnSpan="2" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="TOTAL AMOUNT" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="¥" FontSize="28" VerticalAlignment="Bottom" Margin="0,0,4,6" Foreground="{StaticResource PrimaryBrush}" FontWeight="Light"/>
                        <TextBlock Text="{Binding TotalAmountCurrency, StringFormat={}{0:N0}}" FontSize="56" FontWeight="Light" Foreground="{StaticResource OnBackgroundBrush}"
                                   AutomationProperties.AutomationId="TotalAmountText"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="DEVICE STATUS" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                    <Border Background="{Binding OverallStatus.Value, Converter={StaticResource StatusBrushConv}}" 
                            CornerRadius="6" Padding="16,6" Margin="0,8,0,0">
                        <TextBlock Text="{Binding OverallStatus.Value}" Foreground="White" FontWeight="Bold" FontSize="14"
                                   AutomationProperties.AutomationId="DeviceStatusText"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Inventory Grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,24,0">
            <ItemsControl ItemsSource="{Binding Denominations}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" Width="160" Height="150" Margin="0,0,16,16" Padding="0">
                            <Grid>
                                <!-- Status Indicator Bar -->
                                <Border Height="4" VerticalAlignment="Top" Background="#333" CornerRadius="4,4,0,0">
                                   <!-- Binding to individual status if exposed in ViewModel... currently using generic fallback or could add converter later -->
                                </Border>
                                
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Count.Value}" FontSize="40" FontWeight="SemiBold" Margin="0,12" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="+" Width="40" Height="40" Command="{Binding AddCommand}" Style="{StaticResource IconButtonStyle}" FontSize="18"/>
                                        <Separator Width="12" Visibility="Hidden"/>
                                        <Button Content="-" Width="40" Height="40" Command="{Binding RemoveCommand}" Style="{StaticResource IconButtonStyle}" FontSize="18"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Sidebar -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Dispense Area -->
            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="DISPENSE CASH" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,12"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" x:Name="DispenseBox" 
                                 Text="{Binding DispenseAmountInput, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 FontSize="16" Height="44" VerticalContentAlignment="Center"
                                 AutomationProperties.AutomationId="DispenseBox"/>
                        
                        <Button Grid.Column="1" Content="GO" Command="{Binding DispenseCommand}" 
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Width="60" Height="44" Margin="8,0,0,0"
                                AutomationProperties.AutomationId="DispenseButton"/>
                    </Grid>
                    
                    <!-- Error Message -->
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0"
                                Visibility="{Binding (Validation.HasError), ElementName=DispenseBox, Converter={StaticResource BoolToVis}}">
                        <!-- Simple Icon -->
                        <TextBlock Text="!" Foreground="{StaticResource ErrorBrush}" FontWeight="Bold" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=DispenseBox}"
                                   Foreground="{StaticResource ErrorBrush}" FontSize="11" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Transaction History -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="HISTORY" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Bold" Margin="0,0,0,12"/>
                    
                    <ListBox ItemsSource="{Binding RecentTransactions}" AutomationProperties.AutomationId="HistoryListBox" Background="Transparent" BorderThickness="0" 
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled" Padding="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="8"/>
                                <Setter Property="Margin" Value="0,0,0,4"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2A2A2A"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Background="#2C2C2C" Width="32" Height="32" CornerRadius="16" Margin="0,0,12,0">
                                        <TextBlock Text="{Binding Type, Converter={StaticResource TypeSymbolConv}}" 
                                                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                   Foreground="{StaticResource PrimaryBrush}" FontSize="16"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Type}" FontSize="13" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}" FontSize="11" Foreground="#666"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Column="2" Text="{Binding Amount, StringFormat={}{0:N0}}" 
                                               VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
