<Window 
    x:Class="CashChangerSimulator.UI.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:CashChangerSimulator.UI.Wpf.ViewModels"
    xmlns:conv="clr-namespace:CashChangerSimulator.UI.Wpf.Converters"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=False}"
    Title="Cash Changer Simulator v1.1.0" Height="820" Width="1240"
    Background="{StaticResource BackgroundBrush}"
    Foreground="{StaticResource OnBackgroundBrush}"
    WindowStartupLocation="CenterScreen"
    TextElement.Foreground="{StaticResource OnBackgroundBrush}"
    TextElement.FontWeight="Regular"
    TextElement.FontSize="13"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto">
    
    <Window.Resources>
        <conv:CashStatusToBrushConverter x:Key="StatusBrushConv" />
        <conv:TransactionTypeToSymbolConverter x:Key="TypeSymbolConv" />
        <conv:InvertedBooleanToVisibilityConverter x:Key="InvertedVisibilityConv" />
        <conv:InverseBooleanConverter x:Key="InverseBoolConverter" />
        <conv:DepositModeBackgroundConverter x:Key="DepositModeBackgroundConv" />
        <BooleanToVisibilityConverter x:Key="VisibilityConv" />
        <sys:Boolean x:Key="True">True</sys:Boolean>
        <sys:Boolean x:Key="False">False</sys:Boolean>
    </Window.Resources>

    <Grid>
        <!-- Main Content -->
        <Grid Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="340" />
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header Dashboard -->
            <Border Grid.ColumnSpan="2" Style="{StaticResource CardStyle}" Margin="0,0,0,24" Padding="24,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="CASH BALANCE" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Black"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="¥" FontSize="32" VerticalAlignment="Bottom" Margin="0,0,8,10" Foreground="{StaticResource PrimaryBrush}" FontWeight="Thin"/>
                            <TextBlock Text="{Binding TotalAmountCurrency, StringFormat={}{0:N0}}" FontSize="64" FontWeight="Thin" Foreground="{StaticResource OnBackgroundBrush}"
                                       AutomationProperties.AutomationId="TotalAmountText"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,12">
                            <Border Background="OrangeRed" 
                                    CornerRadius="12" Padding="12,4" Margin="0,0,8,0"
                                    Visibility="{Binding IsOverlappedPlain, Converter={StaticResource VisibilityConv}}">
                                <TextBlock Text="VAL ERROR" Foreground="White" FontWeight="Bold" FontSize="11"/>
                            </Border>
                            <Border Background="{Binding OverallStatusPlain, Converter={StaticResource StatusBrushConv}}" 
                                    CornerRadius="12" Padding="12,4" Margin="0,0,8,0">
                                <TextBlock Text="{Binding OverallStatusPlain}" Foreground="White" FontWeight="Bold" FontSize="11"/>
                            </Border>
                            <Border Background="{Binding FullStatusPlain, Converter={StaticResource StatusBrushConv}}" 
                                    CornerRadius="12" Padding="12,4">
                                <TextBlock Text="{Binding FullStatusPlain}" Foreground="White" FontWeight="Bold" FontSize="11"/>
                            </Border>
                            <Border Background="{StaticResource PrimaryBrush}" 
                                    CornerRadius="12" Padding="12,4" Margin="8,0,0,0">
                                <TextBlock Text="{Binding CurrentModeNamePlain}" Foreground="White" FontWeight="Bold" FontSize="11"
                                           AutomationProperties.AutomationId="ModeIndicatorText"/>
                            </Border>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <ToggleButton Style="{StaticResource ModernToggleButtonStyle}"
                                          IsChecked="{Binding IsJammed.Value}"
                                          ToolTip="Simulate Mechanical Jam"
                                          Margin="0,0,8,0">
                                <ToggleButton.Content>
                                    <materialDesign:PackIcon Kind="CarBrakeAlert" />
                                </ToggleButton.Content>
                                <materialDesign:ToggleButtonAssist.OnContent>
                                    <materialDesign:PackIcon Kind="CarBrakeAlert" />
                                </materialDesign:ToggleButtonAssist.OnContent>
                            </ToggleButton>

                            <Button Style="{StaticResource ModernActionButtonStyle}"
                                    Command="{Binding OpenSettingsCommand}"
                                    ToolTip="System Settings"
                                    Background="{StaticResource SurfaceBrush}"
                                    BorderBrush="{StaticResource PrimaryBrush}">
                                <materialDesign:PackIcon Kind="Settings" Foreground="{StaticResource PrimaryBrush}"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Inventory Grid -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,16,0">
                <ItemsControl ItemsSource="{Binding Denominations}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="175" Height="190" Margin="0,0,16,16" Padding="0" ClipToBounds="True" RenderTransformOrigin="0.5,0.5" BorderThickness="2" BorderBrush="Transparent">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" Color="{StaticResource PrimaryColor}" Opacity="0" ShadowDepth="0" />
                                </Border.Effect>
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                </Border.RenderTransform>
                                 <Border.Style>
                                    <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAcceptingCashPlain}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="{StaticResource PrimaryColor}" Duration="0:0:0.5" RepeatBehavior="Forever" AutoReverse="True" />
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                                                             To="0.6" Duration="0:0:0.5" RepeatBehavior="Forever" AutoReverse="True" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                                            To="Transparent" Duration="0:0:0.2" />
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                                                             To="0" Duration="0:0:0.2" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.05" Duration="0:0:0.2" />
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.05" Duration="0:0:0.2" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2" />
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Margin="16,16,16,0">
                                        <Grid>
                                            <TextBlock Text="{Binding Name}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding StatusPlain}" Foreground="{Binding StatusPlain, Converter={StaticResource StatusBrushConv}}" FontSize="10" FontWeight="Black" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                        </Grid>
                                        <ProgressBar Value="{Binding Count.Value}" Minimum="0" Maximum="200" Height="8" 
                                                     Foreground="{Binding StatusPlain, Converter={StaticResource StatusBrushConv}}" Background="#15FFFFFF" BorderThickness="0"
                                                     materialDesign:TransitionAssist.DisableTransitions="False"/>
                                    </StackPanel>
                                    
                                    <TextBlock Grid.Row="1" Text="{Binding Count.Value}" FontSize="48" FontWeight="Thin" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    
                                    <!-- +/- Buttons Removed -->
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Sidebar -->
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Dispense Area -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="DISPENSE TERMINAL" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Black" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     materialDesign:HintAssist.Hint="Enter amount"
                                     Text="{Binding DispenseAmountInput, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     FontSize="20" FontWeight="Light"
                                     IsEnabled="{Binding IsInDepositModePlain, Converter={StaticResource InverseBoolConverter}}"
                                     AutomationProperties.AutomationId="DispenseBox"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="12,0,0,0">
                                <Button Style="{StaticResource ModernActionButtonStyle}" 
                                        Command="{Binding ShowBulkDispenseCommand}" 
                                        ToolTip="Bulk Dispense"
                                        Margin="0,0,8,0" VerticalAlignment="Center"
                                        AutomationProperties.AutomationId="BulkDispenseShowButton">
                                    <materialDesign:PackIcon Kind="PlaylistCheck" />
                                </Button>
                                <Button Style="{StaticResource ModernActionButtonStyle}" 
                                        Command="{Binding DispenseCommand}" 
                                        VerticalAlignment="Center"
                                        AutomationProperties.AutomationId="DispenseButton">
                                    <materialDesign:PackIcon Kind="ChevronRight" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Deposit Area -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16" Background="{StaticResource SurfaceBrush}">
                    <StackPanel>
                        <TextBlock Text="DEPOSIT TERMINAL" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Black" Margin="0,0,0,16"/>
                        
                        <Grid>
                            <!-- View Before Deposit -->
                            <!-- ... (BeginDepositButton etc) ... -->
                            <Button Style="{StaticResource PrimaryButtonStyle}" 
                                    Command="{Binding BeginDepositCommand}"
                                    Width="180" Height="40"
                                    Visibility="{Binding IsInDepositModePlain, Converter={StaticResource InvertedVisibilityConv}}"
                                    AutomationProperties.AutomationId="BeginDepositButton"
                                    AutomationProperties.Name="NEW DEPOSIT">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="PlusBox" Margin="0,0,8,0" />
                                    <TextBlock Text="NEW DEPOSIT" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- View During Deposit -->
                            <StackPanel Visibility="{Binding IsInDepositModePlain, Converter={StaticResource VisibilityConv}}">
                                 <TextBlock Text="{Binding CurrentDepositAmountPlain, StringFormat={}{0:N0}}" 
                                           FontSize="32" FontWeight="Thin" HorizontalAlignment="Center" Margin="0,0,0,8"
                                           AutomationProperties.AutomationId="CurrentDepositText"/>

                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                     <!-- Step 1: Fix / Bulk (Counting) -->
                                    <StackPanel Grid.Column="0" Visibility="{Binding IsDepositFixedPlain, Converter={StaticResource InvertedVisibilityConv}}">
                                        <Button Style="{StaticResource ModernFlatButtonStyle}" 
                                                Command="{Binding ShowBulkInsertCommand}"
                                                HorizontalAlignment="Stretch" Margin="4"
                                                IsEnabled="{Binding IsDepositPausedPlain, Converter={StaticResource InverseBoolConverter}}"
                                                AutomationProperties.AutomationId="BulkInsertButton"
                                                AutomationProperties.Name="BULK INSERT">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="PlaylistPlus" Margin="0,0,4,0" />
                                                <TextBlock Text="BULK INSERT" />
                                            </StackPanel>
                                        </Button>

                                        <Button Style="{StaticResource ModernFlatButtonStyle}" 
                                                Command="{Binding SimulateOverlapCommand}"
                                                HorizontalAlignment="Stretch" Margin="4"
                                                Foreground="Orange"
                                                AutomationProperties.AutomationId="SimulateOverlapButton"
                                                AutomationProperties.Name="SIMULATE OVERLAP">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="LayersTripleOutline" Margin="0,0,4,0" />
                                                <TextBlock Text="OVERLAP (ERR)" />
                                            </StackPanel>
                                        </Button>

                                        <Button Style="{StaticResource ModernFlatButtonStyle}" 
                                                Command="{Binding FixDepositCommand}"
                                                HorizontalAlignment="Stretch" Margin="4"
                                                AutomationProperties.AutomationId="FixDepositButton"
                                                AutomationProperties.Name="FINISH">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Check" Margin="0,0,4,0" />
                                                <TextBlock Text="FINISH" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>

                                    <!-- Pause/Resume Control (Overlay or separate row?) -->
                                    <!-- Let's put it in Grid.Row of the StackPanel or rearrange. -->
                                </Grid>
                                
                                <Grid Visibility="{Binding IsDepositFixedPlain, Converter={StaticResource InvertedVisibilityConv}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Button Grid.Column="0" Style="{StaticResource ModernFlatButtonStyle}" 
                                            Command="{Binding PauseDepositCommand}"
                                            Visibility="{Binding IsDepositPausedPlain, Converter={StaticResource InvertedVisibilityConv}}"
                                            HorizontalAlignment="Stretch" Margin="4"
                                            AutomationProperties.AutomationId="PauseDepositButton"
                                            AutomationProperties.Name="PAUSE">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Pause" Margin="0,0,4,0" />
                                            <TextBlock Text="PAUSE" />
                                        </StackPanel>
                                    </Button>

                                    <Button Grid.Column="0" Style="{StaticResource PrimaryButtonStyle}" 
                                            Command="{Binding ResumeDepositCommand}"
                                            Visibility="{Binding IsDepositPausedPlain, Converter={StaticResource VisibilityConv}}"
                                            HorizontalAlignment="Stretch" Margin="4"
                                            AutomationProperties.AutomationId="ResumeDepositButton"
                                            AutomationProperties.Name="RESUME">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Play" Margin="0,0,4,0" />
                                            <TextBlock Text="RESUME" />
                                        </StackPanel>
                                    </Button>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Step 2: Store -->
                                    <Button Grid.Column="0" Style="{StaticResource PrimaryButtonStyle}" 
                                            Command="{Binding StoreDepositCommand}"
                                            Visibility="{Binding IsDepositFixedPlain, Converter={StaticResource VisibilityConv}}"
                                            HorizontalAlignment="Stretch" Margin="4"
                                            AutomationProperties.AutomationId="StoreDepositButton"
                                            AutomationProperties.Name="STORE">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Wallet" Margin="0,0,4,0" />
                                            <TextBlock Text="STORE" />
                                        </StackPanel>
                                    </Button>

                                    <!-- Common: Return/Cancel -->
                                    <Button Grid.Column="1" Style="{StaticResource ModernFlatButtonStyle}" 
                                            Command="{Binding CancelDepositCommand}"
                                            Foreground="IndianRed"
                                            HorizontalAlignment="Stretch" Margin="4"
                                            AutomationProperties.AutomationId="RepayDepositButton"
                                            AutomationProperties.Name="RETURN">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Cancel" Margin="0,0,4,0" />
                                            <TextBlock Text="RETURN" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Transaction History -->
                <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="ACTIVITY FEED" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Black" Margin="0,0,0,16"/>
                        
                        <ListBox ItemsSource="{Binding RecentTransactions}" Background="Transparent" BorderThickness="0"
                                 AutomationProperties.AutomationId="HistoryListBox">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                    <Setter Property="Padding" Value="0,8"/>
                                    <Setter Property="Margin" Value="0,0,0,8"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <materialDesign:PackIcon Kind="{Binding Type, Converter={StaticResource TypeSymbolConv}}" 
                                                                 Foreground="{StaticResource PrimaryBrush}" 
                                                                 Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,16,0"/>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Type}" FontSize="13" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm:ss}" FontSize="11" Opacity="0.6"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="2" Text="{Binding Amount, StringFormat={}{0:N0}}" 
                                                   VerticalAlignment="Center" FontWeight="Bold" FontSize="15" Foreground="{StaticResource PrimaryBrush}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- DialogHost containers removed. Bulk operations now use independent windows. -->
    </Grid>
</Window>
