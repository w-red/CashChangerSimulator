<UserControl x:Class="CashChangerSimulator.UI.Wpf.Controls.DepositControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CashChangerSimulator.UI.Wpf.Controls"
             xmlns:vm="clr-namespace:CashChangerSimulator.UI.Wpf.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:DepositViewModel}"
             AutomationProperties.AutomationId="DepositComponent">
    
    <Border Style="{StaticResource CardStyle}" Background="{StaticResource SurfaceBrush}">
        <StackPanel>
            <TextBlock Text="DEPOSIT TERMINAL" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Black" Margin="0,0,0,16"/>
            
            <!-- VIEW: IDLE / QUICK DEPOSIT -->
            <StackPanel Visibility="{Binding IsInDepositMode.Value, Converter={StaticResource InvertedVisibilityConv}}">
                <!-- Standard Start Button -->
                <Button Style="{StaticResource PrimaryButtonStyle}" 
                        Command="{Binding BeginDepositCommand}"
                        Width="200" Height="40"
                        HorizontalAlignment="Center" Margin="0,8"
                        AutomationProperties.AutomationId="BeginDepositButton">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="HandPointingRight" Margin="0,0,8,0" />
                        <TextBlock Text="START DEPOSIT" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Separator Background="#1AFFFFFF" Margin="0,16"/>

                <!-- Quick Deposit Input -->
                <TextBlock Text="QUICK DEPOSIT" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center" Opacity="0.5" Margin="0,0,0,8"/>
                <Grid Width="200" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox materialDesign:HintAssist.Hint="Amount" 
                             Text="{Binding QuickDepositAmountInput.Value, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBoxStyle}"
                             FontSize="16"
                             Margin="0,0,8,0">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding QuickDepositCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Grid.Column="1" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding QuickDepositCommand}"
                            Padding="8,0" Height="36"
                            AutomationProperties.AutomationId="QuickDepositButton">
                        <materialDesign:PackIcon Kind="Flash" />
                    </Button>
                </Grid>
                <TextBlock Text="Calculates denominations automatically" 
                           FontSize="9" Opacity="0.4" HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>

            <!-- VIEW: ACTIVE DEPOSIT -->
            <StackPanel Visibility="{Binding IsInDepositMode.Value, Converter={StaticResource VisibilityConv}}">
                <TextBlock Text="{Binding CurrentDepositAmount.Value, StringFormat={}{0:N0}}"  
                           FontSize="32" FontWeight="Thin" HorizontalAlignment="Center" Margin="0,0,0,16"
                           AutomationProperties.AutomationId="CurrentDepositText"/>

                <!-- INLINE BULK INSERT GRID -->
                <Border Background="#0DFFFFFF" CornerRadius="4" Margin="0,0,0,16" Padding="8"
                        Visibility="{Binding IsBulkInsertVisible.Value, Converter={StaticResource VisibilityConv}}">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <TextBlock Text="BULK INSERT" FontSize="10" FontWeight="Bold" Opacity="0.7"/>
                            <materialDesign:PackIcon Kind="Close" HorizontalAlignment="Right" Opacity="0.5" Cursor="Hand">
                                <materialDesign:PackIcon.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding CancelBulkInsertCommand}"/>
                                </materialDesign:PackIcon.InputBindings>
                            </materialDesign:PackIcon>
                        </Grid>
                        <ItemsControl ItemsSource="{Binding BulkInsertItems}" MaxHeight="160">
                            <ItemsControl.Template>
                                <ControlTemplate TargetType="ItemsControl">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </ControlTemplate>
                            </ItemsControl.Template>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="60" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="11" Opacity="0.9"/>
                                        <TextBox Grid.Column="1" 
                                                 Text="{Binding Quantity.Value, UpdateSourceTrigger=PropertyChanged}"
                                                 FontSize="11"
                                                 materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource PrimaryBrush}"
                                                 HorizontalContentAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button Content="INSERT" Style="{StaticResource PrimaryButtonStyle}"
                                Height="28" Margin="0,8,0,0" FontSize="11"
                                Command="{Binding InsertBulkCommand}"/>
                    </StackPanel>
                </Border>
                
                <!-- Main Actions -->
                <StackPanel Visibility="{Binding IsDepositFixed.Value, Converter={StaticResource InvertedVisibilityConv}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Style="{StaticResource ModernFlatButtonStyle}" 
                                Command="{Binding ShowBulkInsertCommand}"
                                Margin="4"
                                IsEnabled="{Binding IsDepositPaused.Value, Converter={StaticResource InverseBoolConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PlaylistPlus" Margin="0,0,4,0" />
                                <TextBlock Text="BULK" FontSize="11"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="1" Style="{StaticResource ModernFlatButtonStyle}" 
                                Command="{Binding SimulateOverlapCommand}"
                                Margin="4" Foreground="Orange">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LayersTripleOutline" Margin="0,0,4,0" />
                                <TextBlock Text="ERROR" FontSize="11"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <Button Style="{StaticResource ModernFlatButtonStyle}" 
                            Command="{Binding FixDepositCommand}"
                            HorizontalAlignment="Stretch" Margin="4,8"
                            AutomationProperties.AutomationId="FixDepositButton">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Check" Margin="0,0,8,0" />
                            <TextBlock Text="FINISH COUNTING" Foreground="{StaticResource PrimaryBrush}" FontWeight="Bold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Pause/Resume/Store/Return -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <!-- Pause/Resume -->
                        <Grid Visibility="{Binding IsDepositFixed.Value, Converter={StaticResource InvertedVisibilityConv}}">
                            <Button Style="{StaticResource ModernFlatButtonStyle}" 
                                    Command="{Binding PauseDepositCommand}"
                                    Visibility="{Binding IsDepositPaused.Value, Converter={StaticResource InvertedVisibilityConv}}"
                                    Margin="4">
                                <materialDesign:PackIcon Kind="Pause" />
                            </Button>
                            <Button Style="{StaticResource PrimaryButtonStyle}" 
                                    Command="{Binding ResumeDepositCommand}"
                                    Visibility="{Binding IsDepositPaused.Value, Converter={StaticResource VisibilityConv}}"
                                    Margin="4">
                                <materialDesign:PackIcon Kind="Play" />
                            </Button>
                        </Grid>

                        <!-- Store (Fixed state) -->
                        <Button Style="{StaticResource PrimaryButtonStyle}" 
                                Command="{Binding StoreDepositCommand}"
                                Visibility="{Binding IsDepositFixed.Value, Converter={StaticResource VisibilityConv}}"
                                Margin="4" AutomationProperties.AutomationId="StoreDepositButton">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Wallet" Margin="0,0,4,0" />
                                <TextBlock Text="STORE" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Button Grid.Column="1" Style="{StaticResource ModernFlatButtonStyle}" 
                            Command="{Binding CancelDepositCommand}"
                            Foreground="IndianRed"
                            Margin="4"
                            AutomationProperties.AutomationId="RepayDepositButton">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cancel" Margin="0,0,4,0" />
                            <TextBlock Text="RETURN" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
