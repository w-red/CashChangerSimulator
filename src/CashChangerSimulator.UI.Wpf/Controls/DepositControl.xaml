<UserControl x:Class="CashChangerSimulator.UI.Wpf.Controls.DepositControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CashChangerSimulator.UI.Wpf.Controls"
             xmlns:vm="clr-namespace:CashChangerSimulator.UI.Wpf.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:DepositViewModel}"
             AutomationProperties.AutomationId="DepositComponent">
    
    <Border Style="{StaticResource CardStyle}" Background="{StaticResource SurfaceBrush}">
        <StackPanel>
            <TextBlock Text="DEPOSIT TERMINAL" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Black" Margin="0,0,0,16"/>
            
            <!-- View Before Deposit -->
            <Button Style="{StaticResource PrimaryButtonStyle}" 
                    Command="{Binding BeginDepositCommand}"
                    Width="180" Height="40"
                    HorizontalAlignment="Center" Margin="0,8"
                    Visibility="{Binding IsInDepositMode.Value, Converter={StaticResource InvertedVisibilityConv}}"
                    AutomationProperties.AutomationId="BeginDepositButton"
                    AutomationProperties.Name="NEW DEPOSIT">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="PlusBox" Margin="0,0,8,0" />
                    <TextBlock Text="NEW DEPOSIT" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- View During Deposit -->
            <StackPanel Visibility="{Binding IsInDepositMode.Value, Converter={StaticResource VisibilityConv}}">
                 <TextBlock Text="{Binding CurrentDepositAmount.Value, StringFormat={}{0:N0}}"  
                           FontSize="32" FontWeight="Thin" HorizontalAlignment="Center" Margin="0,0,0,8"
                           AutomationProperties.AutomationId="CurrentDepositText"/>

                
                <!-- Step 1: Counting Controls -->
                <StackPanel Visibility="{Binding IsDepositFixed.Value, Converter={StaticResource InvertedVisibilityConv}}">
                    <Button Style="{StaticResource ModernFlatButtonStyle}" 
                            Command="{Binding ShowBulkInsertCommand}"
                            HorizontalAlignment="Stretch" Margin="4"
                            IsEnabled="{Binding IsDepositPaused.Value, Converter={StaticResource InverseBoolConverter}}"
                            AutomationProperties.AutomationId="BulkInsertButton"
                            AutomationProperties.Name="BULK INSERT">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PlaylistPlus" Margin="0,0,8,0" />
                            <TextBlock Text="BULK INSERT" />
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModernFlatButtonStyle}" 
                            Command="{Binding SimulateOverlapCommand}"
                            HorizontalAlignment="Stretch" Margin="4"
                            Foreground="Orange"
                            AutomationProperties.AutomationId="SimulateOverlapButton"
                            AutomationProperties.Name="SIMULATE OVERLAP">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="LayersTripleOutline" Margin="0,0,8,0" />
                            <TextBlock Text="SIMULATE OVERLAP ERROR" />
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource ModernFlatButtonStyle}" 
                            Command="{Binding FixDepositCommand}"
                            HorizontalAlignment="Stretch" Margin="4"
                            AutomationProperties.AutomationId="FixDepositButton"
                            AutomationProperties.Name="FINISH">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Check" Margin="0,0,8,0" />
                            <TextBlock Text="FINISH COUNTING" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                
                <!-- Pause/Resume Control -->
                <Grid Visibility="{Binding IsDepositFixed.Value, Converter={StaticResource InvertedVisibilityConv}}">
                    <Button Style="{StaticResource ModernFlatButtonStyle}" 
                            Command="{Binding PauseDepositCommand}"
                            Visibility="{Binding IsDepositPaused.Value, Converter={StaticResource InvertedVisibilityConv}}"
                            HorizontalAlignment="Stretch" Margin="4"
                            AutomationProperties.AutomationId="PauseDepositButton"
                            AutomationProperties.Name="PAUSE">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Pause" Margin="0,0,8,0" />
                            <TextBlock Text="PAUSE DEPOSIT" />
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource PrimaryButtonStyle}" 
                            Command="{Binding ResumeDepositCommand}"
                            Visibility="{Binding IsDepositPaused.Value, Converter={StaticResource VisibilityConv}}"
                            HorizontalAlignment="Stretch" Margin="4"
                            AutomationProperties.AutomationId="ResumeDepositButton"
                            AutomationProperties.Name="RESUME">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Play" Margin="0,0,8,0" />
                            <TextBlock Text="RESUME DEPOSIT" />
                        </StackPanel>
                    </Button>
                </Grid>


                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Step 2: Store -->
                    <Button Grid.Column="0" Style="{StaticResource PrimaryButtonStyle}" 
                            Command="{Binding StoreDepositCommand}"
                            Visibility="{Binding IsDepositFixed.Value, Converter={StaticResource VisibilityConv}}"
                            HorizontalAlignment="Stretch" Margin="4"
                            AutomationProperties.AutomationId="StoreDepositButton"
                            AutomationProperties.Name="STORE">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Wallet" Margin="0,0,4,0" />
                            <TextBlock Text="STORE" />
                        </StackPanel>
                    </Button>

                    <!-- Common: Return/Cancel -->
                    <Button Grid.Column="1" Style="{StaticResource ModernFlatButtonStyle}" 
                            Command="{Binding CancelDepositCommand}"
                            Foreground="IndianRed"
                            HorizontalAlignment="Stretch" Margin="4"
                            AutomationProperties.AutomationId="RepayDepositButton"
                            AutomationProperties.Name="RETURN">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Cancel" Margin="0,0,4,0" />
                            <TextBlock Text="RETURN" />
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
